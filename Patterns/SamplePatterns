public class Main
{
	public static void main(String[] args) {
	    int row , col;
	    int M = 5; //number of rows to be printed
	    int N = 6; //number of columns to be printed for each row
	    for (row = 0;row < M ;row++ ) {
	        for (col = 0;col < N ; col++ ) {
	            System.out.print("0");
	        }
	        System.out.println();
	    } 
	}
}



