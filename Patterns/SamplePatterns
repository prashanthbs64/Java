import java.util.Scanner;
public class Main
{
	public static void main(String[] args) {
	    int row , col;
	    int N = 5;
	    for (row = 0 ; row < N ; row++) {
	        int output = 65 + N - row - 1;
	        for (col = 0 ; col < row + 1 ; col++) {
	            System.out.print((char)output + " ");
	            output++;
	        }
	        System.out.println();
	    } 
	}
}

