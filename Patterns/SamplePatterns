public class Main
{
	public static void main(String[] args) {
	    int row , col;
	    int N = 5; //number of rows to be printed
	    for (row = 0;row < N ;row++ ) {
	        for (col = 0;col < row + 1 ; col++ ) {
	            System.out.print("0");
	        }
	        System.out.println();
	    } 
	}
}

