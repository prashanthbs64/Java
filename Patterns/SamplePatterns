import java.util.Scanner;
public class Main
{
	public static void main(String[] args) {
	    int row , col;
        Scanner sc = new Scanner(System.in);
	    int N = sc.nextInt(); //number of rows to be printed
	    for (row = 0;row < N ;row++ ) {
	        for (col = 1;col <= row + 1 ; col++ ) {
	            System.out.print(row + 1 +" ");
	        }
	        System.out.println();
	    } 
	}
}

