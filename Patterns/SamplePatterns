import java.util.Scanner;
public class Main
{
	public static void main(String[] args) {
	    int row , col;
	    int N = 4;
	    for ( row = 0 ; row < N ; row++ ){
	        for ( int space = 0; space < N - row - 1 ; space++ ) {
	            System.out.print(" ");
	        }
	        for ( col = 1; col <= row + 1; col++ ) {
	            System.out.print(col);
	        }
	        System.out.println();
	    } 
	}
}

