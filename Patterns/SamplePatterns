import java.util.Scanner;
public class Main
{
	public static void main(String[] args) {
	    int row , col;
	    int N = 4;
	    for ( row = 0 ; row < N ; row++ ){
	        for ( col = N - row ; col > 0; col-- ) {
	            System.out.print(col);
	        }
	        System.out.println();
	    } 
	}
}


