import java.util.Scanner;
public class Main
{
	public static void main(String[] args) {
	    int row , col;
        Scanner sc = new Scanner(System.in);
	    int N = sc.nextInt(); //number of rows to be printed
	    for (row = 0;row < N ;row++ ) {
	        int output_ascii = 65;
	        for (col = 1;col <= row + 1 ; col++ ) {
	            System.out.print((output_ascii + row) + " ");
	        }
	        System.out.println();
	    } 
	}
}


